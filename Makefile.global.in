prefix   = @prefix@
exec_prefix = @exec_prefix@
BINDIR   = @BINDIR@
ETCDIR   = @ETCDIR@
SPOOLDIR = @SPOOLDIR@
SHELL    = @shell@
CC       = @CC@
LN       = @LN_S@
AWK      = @AWK@
DEFS     = @DEFS@
CPPFLAGS = @CPPFLAGS@ @DEFS@
CFLAGS   = @CFLAGS@
LDFLAGS  = @LDFLAGS@
RANLIB   = @RANLIB@
FQDN     = @FQDN@
USER     = @USER@
GROUP    = @GROUP@
PATHADD  = @PATHADD@
MAIL     = @MAIL@
NEWS     = @NEWS@
LIBOBJS  = @LIBOBJS@
SENDMAIL = @SENDMAIL@
LRZ      = @LRZ@
LSZ      = @LSZ@
LRB      = @LRB@
LSB      = @LSB@
LRX      = @LRX@
LSX      = @LSX@

INSTALL = @INSTALL@
# autoconf does a little bit to much for us ....
#INSTALL_PROGRAM = @INSTALL_PROGRAM@
#INSTALL_DATA = @INSTALL_DATA@
INSTALL_PROGRAM = $(INSTALL) -o $(USER) -g $(GROUP) -m 0555
INSTALL_DATA = $(INSTALL) -o $(USER) -g $(GROUP) -m 0640

# jetzt die Definitionen uebernehmen
CFLAGS += -DBINDIR=$(BINDIR) -DETCDIR=$(ETCDIR)
CFLAGS += -DCONFIG_FILE=\"$(ETCDIR)/config\"
CFLAGS += -D_PATH_SENDMAIL=\"$(SENDMAIL)\"
CFLAGS += -DPATH_LRZ=\"$(LRZ)\"
CFLAGS += -DPATH_LSZ=\"$(LSZ)\"
CFLAGS += -DPATH_LRB=\"$(LRB)\"
CFLAGS += -DPATH_LSB=\"$(LSB)\"
CFLAGS += -DPATH_LRX=\"$(LRX)\"
CFLAGS += -DPATH_LSX=\"$(LSX)\"
APCOBJS  = @APCOBJS@
CLEANFILES = *.o *.a *.bak *.BAK *.rej *.orig core *.core

.c.o:   ../Makefile.global
	$(CC) $(CFLAGS) $(CPPFLAGS) -c $<

ONLINE_LIB = @ONLINE_LIB@
