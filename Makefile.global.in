# $Id$

prefix   = @prefix@
exec_prefix = @exec_prefix@
BINDIR   = @BINDIR@
ETCDIR   = @ETCDIR@
SPOOLDIR = @SPOOLDIR@
SHELL    = @shell@
CC       = @CC@
DEFS     = @DEFS@
CPPFLAGS = @CPPFLAGS@ @DEFS@
CFLAGS   = @CFLAGS@
LDFLAGS  = @LDFLAGS@
RANLIB   = @RANLIB@
FQDN     = @FQDN@
USER     = @USER@
GROUP    = @GROUP@
PATHADD  = @PATHADD@
MAIL     = @MAIL@
NEWS     = @NEWS@
LIBOBJS  = @LIBOBJS@
SENDMAIL = @SENDMAIL@

INSTALL = @INSTALL@
# autoconf does a littel bit to much for us ....
#INSTALL_PROGRAM = @INSTALL_PROGRAM@
#INSTALL_DATA = @INSTALL_DATA@
INSTALL_PROGRAM = $(INSTALL) -o $(USER) -g $(GROUP) -m 555
INSTALL_DATA = $(INSTALL) -o $(USER) -g $(GROUP) -m 640

# jetzt die Definitionen übernehmen
CFLAGS += -DBINDIR=$(BINDIR) -DETCDIR=$(ETCDIR)
CFLAGS += -DCONFIG_FILE=\"$(ETCDIR)/config\"
CFLAGS += -D_PATH_SENDMAIL=\"$(SENDMAIL)\"
CFLAGS += -DVERSION=\"0.84\"
APCOBJS  = @APCOBJS@
CLEANFILES = *.o *.a *.bak *.BAK *.rej *.orig core *.core

.c.o:   ../Makefile.global
	$(CC) $(CFLAGS) $(CPPFLAGS) -c $<

