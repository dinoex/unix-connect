
WARNALL	= \
	-W \
	-Wimplicit \
	-Wreturn-type \
	-Wunused \
	-Wswitch \
	-Wcomment \
	-Wtrigraphs \
	-Wformat \
	-Wchar-subscripts \
	-Wuninitialized \
	-Wparentheses

WARNGCC24x = \
	-pedantic \
	-Wconversion \
	-Wtraditional \
	-Wenum-clash \

WARNGCC25x = \
	-Wconversion \
	-Wenum-clash \

WARNGCC26x = \
	-Wmissing-declarations \
	-pedantic \
	-Wtraditional \
	-Wenum-clash \

WARNGCC27x = \
	-Wmissing-declarations \
	-pedantic

WARNEGCS = \
	-Wimplicit-int \
	-Wimplicit-function-delcaration \
	-Wmissing-declarations \

WARNBASE = \
	$(WARNALL) \
	-Wshadow \
	-Wid-clash-30 \
	-Wpointer-arith \
	-Wcast-qual \
	-Wcast-align \
	-Wwrite-strings \
	-Waggregate-return \
	-Wstrict-prototypes \
	-Wmissing-prototypes \
	-Wnested-externs \
	-Woverloaded-virtual \
	-Winline

WARN	= \
	$(WARNBASE) \
	$(WARNEGCS)

prefix   = @prefix@
exec_prefix = @exec_prefix@
DESTDIR  = @BINDIR@
BINDIR   = @BINDIR@
ETCDIR   = @ETCDIR@
SPOOLDIR = @SPOOLDIR@
SHELL    = @shell@
CC       = @CC@
DEFS     = @DEFS@
CPPFLAGS = @CPPFLAGS@ @DEFS@
CFLAGS   = @CFLAGS@
LDFLAGS  = @LDFLAGS@
RANLIB   = @RANLIB@
FQDN     = @FQDN@
USER     = @USER@
GROUP    = @GROUP@
PATHADD  = @PATHADD@
MAIL     = @MAIL@
NEWS     = @NEWS@

INSTALL = install -c
INSTALL_PROGRAM = $(INSTALL) -o $(USER) -g $(GROUP)
INSTALL_DATA = $(INSTALL) -o $(USER) -g $(GROUP) -m 640

# jetzt die Definitionen übernehmen
CFLAGS += -DDESTDIR=$(DESTDIR) -DBINDIR=$(BINDIR) -DETCDIR=$(ETCDIR)
CFLAGS += -DCONFIG_FILE=\"$(ETCDIR)/config\"
APCOBJS  = @APCOBJS@
CLEANFILES = *.o *.a *.bak *.rej *.orig core *.core

.c.o:   ../Makefile.global
	$(CC) $(CFLAGS) $(CPPFLAGS) -c $<

