AC_MSG_CHECKING(Path)
AC_ARG_WITH(path,
[ --with-path=path         Path innerhalb von UC (Default=PATH).],
[path=$withval],[path=$PATH])
AC_MSG_RESULT($path)
AC_SUBST(path)

AC_MSG_CHECKING(Unterverzeichnis für die Pogramme)
