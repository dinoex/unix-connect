AC_MSG_CHECKING(Welcher Typ ist das Gateway)
AC_ARG_WITH(box,
[ --with-box=typ            point, gate, server
                           Point: Unix-Connect ist Enduser-System
                           Gate:  Kein Teil des Z-Netzes
                           Box:   Alle ist möglich (default).],
[ case "$withval" in
  box)
        AC_MSG_RESULT(Box)
        INSTTYPE="box"
        ;;
  point)
        AC_MSG_RESULT(Point)
        INSTTYPE="point"
        ;;
  gate)
        AC_MSG_RESULT(Gate)
        INSTTYPE="gate"
        ;;
  *)
        AC_MSG_RESULT(Fehler!)
	exit 1
        ;;
  esac ],[
  AC_MSG_RESULT(box)
  INSTTYPE="box"]
)
AC_SUBST(INSTTYPE)



