include Makefile.global

SUBDIRS = helpers date hdlib lib online gate tools etc shell \
	rsmtp \
	mail-and-news/$(MAIL) \
	mail-and-news/$(NEWS)

all:
	for dir in $(SUBDIRS); do (cd $$dir; $(MAKE) all); done

install:
	if test ! -d $(BINDIR); then mkdir $(BINDIR); chown $(USER) $(BINDIR); fi
	if test ! -d $(ETCDIR); then mkdir $(ETCDIR); chown $(USER) $(ETCDIR); fi
	if test ! -d $(ETCDIR)/systems; then mkdir $(ETCDIR)/systems; chown $(USER) $(ETCDIR)/systems; fi
	for dir in $(SUBDIRS); do (cd $$dir; $(MAKE) install); done

clean:
	-rm -f $(CLEANFILES)
	for dir in $(SUBDIRS); do (cd $$dir; $(MAKE) clean); done

clobber:
	-rm -f $(CLEANFILES)
	for dir in $(SUBDIRS); do (cd $$dir; $(MAKE) clobber); done

tidy:	clobber
	for dir in $(SUBDIRS); do (cd $$dir; $(MAKE) tidy); done
	-rm -f Makefile.global Makefile
	-rm -f config.cache config.log config.status confdefs.h
	-rm -f include/sysdep.h include/policy.h

newhash:
	(cd hdlib; $(MAKE) newhash)

